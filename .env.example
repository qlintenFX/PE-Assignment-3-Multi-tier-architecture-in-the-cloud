# Flask application environment variables
SECRET_KEY="your-secret-key-here"
DATABASE_URL="mysql+pymysql://username:password@your-db-host.region.rds.amazonaws.com:3306/your-db-name"

# Database credentials (used in AWS CLI commands)
DB_USERNAME="your-db-username"
DB_PASSWORD="your-db-password"
DB_HOST="your-db-host.region.rds.amazonaws.com"
DB_NAME="your-db-name"

# Domain name for SSL certificate
DOMAIN_NAME="example.domain.com"

# Your IP address for bastion host security group
YOUR_IP="123.123.123.123"

# AWS configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_SESSION_TOKEN="your-aws-session-token" 